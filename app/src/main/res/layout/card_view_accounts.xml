<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="175dp"
        android:background="@drawable/cardview_background"
        android:gravity="center|top"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/background_image_background"
            android:gravity="center">

            <ImageView
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:id="@+id/book_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="false"
                android:src="@drawable/ic_person_outline_black_24dp"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/insta_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand     "
            android:paddingTop="2dp"
            android:text="@string/username"
            android:textSize="14sp"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:background="@drawable/submit_button_background_white"/>

    </LinearLayout>
</android.support.v7.widget.CardView>